{
  "name": "@tielec/pulumi-components",
  "version": "0.1.0",
  "description": "Common Pulumi components for tielec infrastructure",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "node --max-old-space-size=4096 ./node_modules/.bin/jest --runInBand",
    "test:coverage": "node --max-old-space-size=4096 ./node_modules/.bin/jest --runInBand --coverage",
    "test:watch": "node --max-old-space-size=4096 ./node_modules/.bin/jest --runInBand --watch"
  },
  "dependencies": {
    "@pulumi/pulumi": "^3.0.0",
    "@pulumi/aws": "^7.0.0",
    "simple-git": "^3.20.0",
    "archiver": "^6.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}
